@using ServiceBookingSystem.Data.Common
@model ServiceBookingSystem.Web.Models.ServiceDetailsViewModel
@{
    ViewData["Title"] = Model.Service.Name;
}

<div class="container mt-5">
    <div class="row">
        @* --- Left Column: Image & Provider --- *@
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                @if (Model.Service.Images.Any())
                {
                    <div id="serviceCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.Service.Images.Count; i++)
                            {
                                var image = Model.Service.Images[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@image.ImageUrl" class="d-block w-100" alt="Service Image" style="height: 300px; object-fit: cover;">
                                </div>
                            }
                        </div>
                        @if (Model.Service.Images.Count > 1)
                        {
                            <button class="carousel-control-prev" type="button" data-bs-target="#serviceCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#serviceCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        }
                    </div>
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                        <span class="text-muted display-1">📷</span>
                    </div>
                }

                <div class="card-body text-center">
                    <h5 class="card-title">Provided by</h5>
                    <p class="card-text fw-bold">@Model.Service.ProviderName</p>
                </div>
            </div>
        </div>

        @* --- Right Column: Details & Action --- *@
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1 class="display-5 fw-bold">@Model.Service.Name</h1>
                    <span class="badge bg-info text-dark fs-6">@Model.Service.CategoryName</span>
                    @if (Model.Service.IsOnline)
                    {
                        <span class="badge bg-success fs-6">Online</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary fs-6">@Model.Service.City</span>
                    }
                </div>
                <div class="text-end">
                    <h2 class="text-primary fw-bold">$@Model.Service.Price</h2>
                    <p class="text-muted">per service</p>
                </div>
            </div>

            <hr class="my-4" />

            <h4>Description</h4>
            <p class="lead">@Model.Service.Description</p>

            <div class="row mt-4">
                <div class="col-md-6">
                    <h5>Details</h5>
                    <ul class="list-unstyled">
                        <li><strong>Duration:</strong> @Model.Service.DurationInMinutes minutes</li>
                        <li><strong>Location:</strong> @(Model.Service.IsOnline ? "Online" : $"{Model.Service.StreetAddress}, {Model.Service.City}, {Model.Service.PostalCode}")</li>
                    </ul>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole(RoleConstants.Customer))
                    {
                        <a asp-controller="Booking" asp-action="Create" asp-route-serviceId="@Model.Service.Id" class="btn btn-primary btn-lg px-5">Book Now</a>
                    }
                    else if (User.IsInRole(RoleConstants.Provider))
                    {
                        <button class="btn btn-secondary btn-lg px-5" disabled>Provider View</button>
                    }
                    else
                    {
                         <a asp-controller="Booking" asp-action="Create" asp-route-serviceId="@Model.Service.Id" class="btn btn-primary btn-lg px-5">Book Now</a>
                    }
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Context.Request.Path" class="btn btn-primary btn-lg px-5">Log in to Book</a>
                }
                
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
            </div>
            
            <hr class="my-5" />
            
            @* --- Reviews Section --- *@
            <div id="reviews">
                <h3>Reviews <span class="text-muted fs-5">(@Model.Reviews.TotalCount)</span></h3>
                
                @if (!Model.Reviews.Items.Any())
                {
                    <p class="text-muted">No reviews yet. Be the first to book and review!</p>
                }
                else
                {
                    <div class="list-group list-group-flush mt-3">
                        @foreach (var review in Model.Reviews.Items)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">@review.CustomerName</h5>
                                    <small class="text-muted">@review.CreatedOn.ToShortDateString()</small>
                                </div>
                                <div class="mb-1 text-warning">
                                    @for (int i = 0; i < review.Rating; i++) { <span>★</span> }
                                    @for (int i = review.Rating; i < 5; i++) { <span class="text-muted">☆</span> }
                                </div>
                                <p class="mb-1">@review.Comment</p>
                            </div>
                        }
                    </div>
                    
                    @* Review Pagination *@
                    @if (Model.Reviews.TotalPages > 1)
                    {
                        <nav class="mt-3">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.Reviews.HasPreviousPage ? "" : "disabled")">
                                    <a class="page-link" asp-action="Details" asp-route-id="@Model.Service.Id" asp-route-pageNumber="@(Model.Reviews.PageNumber - 1)" asp-fragment="reviews">Previous</a>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link">Page @Model.Reviews.PageNumber of @Model.Reviews.TotalPages</span>
                                </li>
                                <li class="page-item @(Model.Reviews.HasNextPage ? "" : "disabled")">
                                    <a class="page-link" asp-action="Details" asp-route-id="@Model.Service.Id" asp-route-pageNumber="@(Model.Reviews.PageNumber + 1)" asp-fragment="reviews">Next</a>
                                </li>
                            </ul>
                        </nav>
                    }
                }
            </div>
        </div>
    </div>
</div>