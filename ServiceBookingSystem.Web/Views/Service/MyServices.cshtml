@using ServiceBookingSystem.Application.DTOs.Shared
@model PagedResult<ServiceBookingSystem.Web.Models.ProviderServiceListViewModel>
@{
    ViewData["Title"] = "My Services";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Services</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Create New Service
        </a>
    </div>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info text-center">
            <h4>You haven't created any services yet.</h4>
            <p>Get started by offering your first service to customers!</p>
            <a asp-action="Create" class="btn btn-primary mt-2">Create Service</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model.Items)
                    {
                        <tr>
                            <td>
                                <span class="fw-bold">@service.Name</span>
                            </td>
                            <td><span class="badge bg-secondary">@service.CategoryName</span></td>
                            <td>$@service.Price</td>
                            <td>
                                @if (service.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-controller="Schedule" asp-action="Index" asp-route-serviceId="@service.Id" class="btn btn-sm btn-outline-info me-1">
                                    <i class="bi bi-calendar-week"></i> Schedule
                                </a>
                                <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@service.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this service?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Pagination *@
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="MyServices" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">Page @Model.PageNumber of @Model.TotalPages</span>
                    </li>
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="MyServices" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>