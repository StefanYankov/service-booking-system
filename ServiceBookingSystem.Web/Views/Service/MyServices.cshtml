@using ServiceBookingSystem.Application.DTOs.Shared
@model PagedResult<ProviderServiceListViewModel>
@{
    ViewData["Title"] = "My Services";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Services</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Create New Service
        </a>
    </div>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info text-center py-5">
            <h4>You haven't created any services yet.</h4>
            <p>Start offering your skills to customers today!</p>
            <a asp-action="Create" class="btn btn-primary mt-3">Create Service</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model.Items)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@service.Id" class="fw-bold text-decoration-none">
                                    @service.Name
                                </a>
                            </td>
                            <td>@service.CategoryName</td>
                            <td>$@service.Price</td>
                            <td>
                                @if (service.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form asp-action="Delete" asp-route-id="@service.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this service?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Pagination *@
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="MyServices" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">Page @Model.PageNumber of @Model.TotalPages</span>
                    </li>
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="MyServices" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>