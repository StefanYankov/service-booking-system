@model ServiceBookingSystem.Web.Models.ServiceUpdateViewModel
@{
    ViewData["Title"] = "Edit Service";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Edit Service</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                                <option value="">Select a Category</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DurationInMinutes" class="form-label"></label>
                                <input asp-for="DurationInMinutes" class="form-control" type="number" step="15" />
                                <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsOnline" class="form-check-input" id="isOnlineCheck" />
                            <label asp-for="IsOnline" class="form-check-label">This is an online service</label>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Service is Active (Visible to customers)</label>
                        </div>

                        <div id="addressFields">
                            <div class="mb-3">
                                <label asp-for="StreetAddress" class="form-label"></label>
                                <input asp-for="StreetAddress" class="form-control" />
                                <span asp-validation-for="StreetAddress" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="City" class="form-label"></label>
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="PostalCode" class="form-label"></label>
                                    <input asp-for="PostalCode" class="form-control" />
                                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <hr class="my-4" />
                        
                        <h4>Images</h4>
                        
                        @* Existing Images *@
                        @if (Model.ExistingImages.Any())
                        {
                            <div class="row row-cols-2 row-cols-md-4 g-3 mb-3">
                                @foreach (var image in Model.ExistingImages)
                                {
                                    <div class="col position-relative">
                                        <div class="card h-100 @(image.IsThumbnail ? "border-success border-3" : "")">
                                            <img src="@image.ImageUrl" class="card-img-top img-thumbnail" alt="Service Image" style="height: 100px; object-fit: cover;">
                                            
                                            @* Delete Button *@
                                            <button type="submit" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1" 
                                                    asp-action="DeleteImage" asp-route-serviceId="@Model.Id" asp-route-imageId="@image.Id"
                                                    title="Delete Image" onclick="return confirm('Delete this image?');">
                                                <i class="bi bi-x"></i> X
                                            </button>
                                            
                                            @* Set Thumbnail Button *@
                                            @if (!image.IsThumbnail)
                                            {
                                                <button type="submit" class="btn btn-warning btn-sm position-absolute bottom-0 start-0 m-1" 
                                                        asp-action="SetThumbnail" asp-route-serviceId="@Model.Id" asp-route-imageId="@image.Id"
                                                        title="Set as Main Image">
                                                    <i class="bi bi-star"></i> Main
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success position-absolute bottom-0 start-0 m-1">Main</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No images uploaded yet.</p>
                        }

                        @* Upload New Image *@
                        <div class="mb-3">
                            <label asp-for="NewImage" class="form-label"></label>
                            <input asp-for="NewImage" class="form-control" type="file" accept=".jpg,.jpeg,.png,.webp" />
                            <span asp-validation-for="NewImage" class="text-danger"></span>
                            <div class="form-text">Allowed formats: .jpg, .jpeg, .png, .webp. Max size: 5MB.</div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                            <a asp-action="MyServices" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/service-form.js" asp-append-version="true"></script>
}