@model ServiceBookingSystem.Web.Models.BookingCreateViewModel
@{
    ViewData["Title"] = "Book Service";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Book Service</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-light border">
                        <h5>@Model.ServiceName</h5>
                        <p class="mb-0">Provided by <strong>@Model.ProviderName</strong></p>
                        <p class="mb-0 text-primary fw-bold">$@Model.ServicePrice</p>
                    </div>

                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="ServiceId" />
                        <input type="hidden" asp-for="ServiceName" />
                        <input type="hidden" asp-for="ServicePrice" />
                        <input type="hidden" asp-for="ProviderName" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Date" class="form-label"></label>
                                <input asp-for="Date" class="form-control" type="date" id="bookingDate" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Time" class="form-label"></label>
                                <select asp-for="Time" class="form-select" id="bookingTime" disabled>
                                    <option value="">Select a date first</option>
                                </select>
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any special instructions?"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Confirm Booking</button>
                            <a asp-controller="Service" asp-action="Details" asp-route-id="@Model.ServiceId" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/booking.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            initBookingForm(@Model.ServiceId);
        });
    </script>
}