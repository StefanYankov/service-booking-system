@using ServiceBookingSystem.Data.Entities.Domain
@model ServiceBookingSystem.Application.DTOs.Shared.PagedResult<ServiceBookingSystem.Web.Models.CustomerBookingViewModel>
@{
    ViewData["Title"] = "My Bookings";
}

<div class="container mt-4">
    <h2 class="mb-4">My Bookings</h2>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info text-center py-5">
            <h4>You haven't booked any services yet.</h4>
            <p>Browse our catalog to find professionals.</p>
            <a asp-controller="Service" asp-action="Index" class="btn btn-primary mt-3">Browse Services</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Service</th>
                        <th>Provider</th>
                        <th>Date & Time</th>
                        <th>Status</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.Items)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Service" asp-action="Details" asp-route-id="@booking.ServiceId" class="text-decoration-none fw-bold">
                                    @booking.ServiceName
                                </a>
                            </td>
                            <td>@booking.ProviderName</td>
                            <td>@booking.BookingStart.ToString("g")</td>
                            <td>
                                @if (booking.Status == BookingStatus.Pending.ToString())
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (booking.Status == BookingStatus.Confirmed.ToString())
                                {
                                    <span class="badge bg-success">Confirmed</span>
                                }
                                else if (booking.Status == BookingStatus.Declined.ToString())
                                {
                                    <span class="badge bg-danger">Declined</span>
                                }
                                else if (booking.Status == BookingStatus.Cancelled.ToString())
                                {
                                    <span class="badge bg-secondary">Cancelled</span>
                                }
                                else if (booking.Status == BookingStatus.Completed.ToString())
                                {
                                    <span class="badge bg-primary">Completed</span>
                                }
                            </td>
                            <td>$@booking.Price</td>
                            <td>
                                @if (booking.Status == BookingStatus.Pending.ToString() || booking.Status == BookingStatus.Confirmed.ToString())
                                {
                                    <form asp-controller="Booking" asp-action="Cancel" asp-area="" asp-route-id="@booking.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Cancel</button>
                                    </form>
                                    <a asp-controller="Booking" asp-action="Reschedule" asp-area="" asp-route-id="@booking.Id" class="btn btn-sm btn-outline-warning">Reschedule</a>
                                }
                                else if (booking.Status == BookingStatus.Completed.ToString())
                                {
                                    <a asp-controller="Review" asp-action="Create" asp-route-bookingId="@booking.Id" class="btn btn-sm btn-outline-primary">Leave Review</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Pagination *@
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">Page @Model.PageNumber of @Model.TotalPages</span>
                    </li>
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>