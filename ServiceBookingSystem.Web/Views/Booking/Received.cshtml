@using ServiceBookingSystem.Data.Entities.Domain
@model ServiceBookingSystem.Application.DTOs.Shared.PagedResult<ServiceBookingSystem.Web.Models.ProviderBookingViewModel>
@{
    ViewData["Title"] = "Received Bookings";
}

<div class="container mt-4">
    <h2 class="mb-4">Received Bookings</h2>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info text-center py-5">
            <h4>No booking requests yet.</h4>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Service</th>
                        <th>Customer</th>
                        <th>Date & Time</th>
                        <th>Status</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.Items)
                    {
                        <tr>
                            <td>@booking.ServiceName</td>
                            <td>
                                <div>
                                    <a asp-action="CustomerDetails" asp-route-customerId="@booking.CustomerId" class="fw-bold text-decoration-none">
                                        @booking.CustomerName
                                    </a>
                                </div>
                            </td>
                            <td>@booking.BookingStart.ToString("g")</td>
                            <td>
                                @if (booking.Status == BookingStatus.Pending.ToString())
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (booking.Status == BookingStatus.Confirmed.ToString())
                                {
                                    <span class="badge bg-success">Confirmed</span>
                                }
                                else if (booking.Status == BookingStatus.Declined.ToString())
                                {
                                    <span class="badge bg-danger">Declined</span>
                                }
                                else if (booking.Status == BookingStatus.Cancelled.ToString())
                                {
                                    <span class="badge bg-secondary">Cancelled</span>
                                }
                                else if (booking.Status == BookingStatus.Completed.ToString())
                                {
                                    <span class="badge bg-primary">Completed</span>
                                }
                            </td>
                            <td>$@booking.Price</td>
                            <td>
                                @if (booking.Status == BookingStatus.Pending.ToString())
                                {
                                    <form asp-controller="Booking" asp-action="Confirm" asp-area="" asp-route-id="@booking.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-success">Confirm</button>
                                    </form>
                                    <form asp-controller="Booking" asp-action="Decline" asp-area="" asp-route-id="@booking.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger">Decline</button>
                                    </form>
                                }
                                else if (booking.Status == BookingStatus.Confirmed.ToString())
                                {
                                    <form asp-controller="Booking" asp-action="Complete" asp-area="" asp-route-id="@booking.Id" method="post" class="d-inline" onsubmit="return confirm('Mark this booking as completed?');">
                                        <button type="submit" class="btn btn-sm btn-primary">Complete</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Pagination *@
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Received" asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">Page @Model.PageNumber of @Model.TotalPages</span>
                    </li>
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-action="Received" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>