@model ServiceBookingSystem.Web.Models.ReviewCreateViewModel
@{
    ViewData["Title"] = "Write a Review";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Write a Review</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-light border">
                        <h5>@Model.ServiceName</h5>
                        <p class="mb-0 text-muted">How was your experience?</p>
                    </div>

                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="BookingId" />
                        <input type="hidden" asp-for="ServiceId" />
                        <input type="hidden" asp-for="ServiceName" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Rating" class="form-label">Rating</label>
                            <div class="rating-input">
                                @* Simple Select for MVP, can be enhanced with JS stars later *@
                                <select asp-for="Rating" class="form-select">
                                    <option value="">Select a rating</option>
                                    <option value="5">⭐⭐⭐⭐⭐ (Excellent)</option>
                                    <option value="4">⭐⭐⭐⭐ (Good)</option>
                                    <option value="3">⭐⭐⭐ (Average)</option>
                                    <option value="2">⭐⭐ (Poor)</option>
                                    <option value="1">⭐ (Terrible)</option>
                                </select>
                            </div>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Comment" class="form-label">Comment</label>
                            <textarea asp-for="Comment" class="form-control" rows="5" placeholder="Share details of your own experience..."></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Submit Review</button>
                            <a asp-controller="Booking" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}