@using ServiceBookingSystem.Application.DTOs.Shared
@model PagedResult<ServiceBookingSystem.Application.DTOs.Category.CategoryViewDto>
@{
    ViewData["Title"] = "Manage Categories";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Categories</h1>
            </div>
            <div class="col-sm-6 text-end">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New
                </a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 5%">ID</th>
                            <th style="width: 20%">Name</th>
                            <th style="width: 50%">Description</th>
                            <th style="width: 25%" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <strong>@item.Name</strong>
                                </td>
                                <td>@item.Description</td>
                                <td class="project-actions text-end">
                                    <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="fas fa-pencil-alt"></i> Edit
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure? This might affect services linked to this category.');">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer clearfix">
                @if (Model.TotalPages > 1)
                {
                    <ul class="pagination pagination-sm m-0 float-right">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)">&laquo;</a>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link">Page @Model.PageNumber of @Model.TotalPages</span>
                        </li>
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)">&raquo;</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
</section>
