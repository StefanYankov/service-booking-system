@using ServiceBookingSystem.Application.DTOs.Shared
@model PagedResult<ServiceBookingSystem.Application.DTOs.Service.ServiceAdminViewDto>
@{
    ViewData["Title"] = "Manage Services";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Services Oversight</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 5%">ID</th>
                                <th style="width: 20%">Name</th>
                                <th style="width: 15%">Provider</th>
                                <th style="width: 10%">Category</th>
                                <th style="width: 10%">Status</th>
                                <th style="width: 15%">Created</th>
                                <th style="width: 25%" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        <strong>@item.Name</strong>
                                        <br/>
                                        <small>@item.Description.Substring(0, Math.Min(item.Description.Length, 50))...</small>
                                    </td>
                                    <td>
                                        @item.ProviderName
                                        <br/>
                                        <small>@item.ProviderEmail</small>
                                    </td>
                                    <td>@item.CategoryName</td>
                                    <td>
                                        @if (item.IsDeleted)
                                        {
                                            <span class="badge badge-danger">Deleted</span>
                                        }
                                        else if (item.IsActive)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Inactive</span>
                                        }
                                    </td>
                                    <td>@item.CreatedOn.ToShortDateString()</td>
                                    <td class="project-actions text-end">
                                        @if (!item.IsDeleted)
                                        {
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to ban this service?');">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-ban"></i> Ban
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer clearfix">
                @if (Model.TotalPages > 1)
                {
                    <ul class="pagination pagination-sm m-0 float-right">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)">&laquo;</a>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link">Page @Model.PageNumber of @Model.TotalPages</span>
                        </li>
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)">&raquo;</a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
</section>
